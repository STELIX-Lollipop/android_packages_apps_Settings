<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Search in Recents -->
    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="recents_show_search_bar"
            android:title="@string/recents_show_searchbar"
            settings:keywords="@string/keywords_recents_show_searchbar"
            android:defaultValue="true"
            settings:advanced="true" />

    <!-- Recents panel settings -->
    <PreferenceScreen
        android:id="@+id/recents_panel_settings"
        android:title="@string/recents_panel_settings"
        android:fragment="com.android.settings.aicp.RecentsPanelSettings" />

    <!-- OmniSwitch settings -->
    <PreferenceScreen
        android:key="omni_switch"
        android:title="@string/omni_switch_title"
        android:summary="@string/omni_switch_summary">
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="org.omnirom.omniswitch"
            android:targetClass="org.omnirom.omniswitch.SettingsActivity" />
    </PreferenceScreen>

</PreferenceScreen>
